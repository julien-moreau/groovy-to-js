{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--colors",
                "--recursive",
                "${workspaceRoot}/.build/test/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceRoot}/.build/**/*.js"
            ]
        }
    ],
    "compounds": []
}